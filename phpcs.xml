<?xml version="1.0"?>
<ruleset name="Laravel/GoogleDrive">
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="45"/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>

    <arg value="nps"/>

    <file>./src</file>
    <file>./tests</file>

    <rule ref="LeroyMerlin"/>

     <rule ref="SlevomatCodingStandard.Functions.UnusedParameter.UnusedParameter">
        <exclude-pattern>tests/TestCase.php</exclude-pattern>
    </rule>
</ruleset>